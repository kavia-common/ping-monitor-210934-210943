# Frontend environment variables for Ping GUI (React)
# Copy this file to .env and adjust as needed.

# Base URL for REST API (backend)
# Default backend runs on port 8080 per backend README
REACT_APP_API_BASE=http://localhost:8080
# Alternative name accepted by code (either works)
REACT_APP_BACKEND_URL=http://localhost:8080

# Frontend URL (used for CORS in some deployments)
REACT_APP_FRONTEND_URL=http://localhost:3000

# WebSocket base URL for live log streaming.
# If omitted, the app derives it from API base (ws://localhost:8080 or wss when https).
REACT_APP_WS_URL=ws://localhost:8080

# Health check path on the backend
REACT_APP_HEALTHCHECK_PATH=/health

# Environment/mode flags (optional; convenience for CI/CD)
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true

# Preferred local dev port for CRA (you can also export PORT before npm start)
REACT_APP_PORT=3000

# Proxy/trust settings (not used by CRA directly, but documented for completeness)
REACT_APP_TRUST_PROXY=true

# Logging level for frontend (app-level use; optional)
REACT_APP_LOG_LEVEL=info

# Feature flags and experiments (optional JSON or CSV)
# Example: {"newWs":true}
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
